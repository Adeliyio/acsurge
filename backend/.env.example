# AdCopySurge Backend Configuration

# App Settings
APP_NAME=AdCopySurge
DEBUG=True
HOST=127.0.0.1
PORT=8000
NODE_ENV=development

# Security
SECRET_KEY=your-secret-key-change-this-in-production
ACCESS_TOKEN_EXPIRE_MINUTES=30

# Database
DATABASE_URL=postgresql://username:password@localhost/adcopysurge

# CORS
ALLOWED_HOSTS=["http://localhost:3000", "http://127.0.0.1:3000"]

# AI APIs
OPENAI_API_KEY=your-openai-api-key
HUGGINGFACE_API_KEY=your-huggingface-api-key

# Redis
REDIS_URL=redis://localhost:6379

# Email
MAIL_USERNAME=your-email@example.com
MAIL_PASSWORD=your-email-password
MAIL_FROM=noreply@adcopysurge.com
MAIL_SERVER=smtp.gmail.com
MAIL_PORT=587

# Subscription Pricing
BASIC_PLAN_PRICE=49
PRO_PLAN_PRICE=99

# Paddle Configuration (Replace with your actual Paddle credentials)
PADDLE_VENDOR_ID=your-paddle-vendor-id
PADDLE_AUTH_CODE=your-paddle-auth-code
PADDLE_PUBLIC_KEY=your-paddle-public-key
PADDLE_ENVIRONMENT=sandbox
PADDLE_API_URL=https://sandbox-vendors.paddle.com/api

# Legacy Stripe (will be removed after migration)
# STRIPE_PUBLISHABLE_KEY=pk_test_...
# STRIPE_SECRET_KEY=sk_test_...
# STRIPE_WEBHOOK_SECRET=whsec_...

# Monitoring & Logging
SENTRY_DSN=your-sentry-dsn
LOG_LEVEL=info

# Feature Flags
ENABLE_ANALYTICS=true
ENABLE_COMPETITOR_ANALYSIS=true
ENABLE_PDF_REPORTS=true
